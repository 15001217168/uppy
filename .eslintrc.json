{
  "extends": ["standard", "standard-preact"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "window": true,
    "hexo": true
  },
  "plugins": ["jest", "compat"],
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "compat/compat": ["error"],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "key-spacing": [
      "error",
      {
        "multiLine": {
          "beforeColon": false,
          "afterColon": true
        },
        "align": {
          "beforeColon": false,
          "afterColon": true,
          "on": "colon",
          "mode": "strict"
        }
      }
    ]    
  },
  "settings": {
    "polyfills": ["fetch", "promises"]
  }
}
